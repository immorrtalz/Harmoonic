{
	"build":
	{
		"devPath": "../src",
		"distDir": "../src",
		"withGlobalTauri": true
	},
	"package":
	{
		"productName": "Harmoonic"
	},
	"tauri":
	{
		"cli":
		{
			"args": [
				{
					"name": "filePath",
					"index": 1,
					"takesValue": true
				}
			]
		},
		"allowlist":
		{
			"all": true,
			"shell":
			{
				"scope": [
					{
						"name": "use-powershell",
						"cmd": "powershell",
						"args": true
					}
				]
			},
			"fs":
			{
				"all": true,
				"scope": ["**"]
			},
			"protocol":
			{
				"asset": true,
				"assetScope": ["**"]
			}
		},
		"windows": [
			{
				"label": "main",
				"width": 400,
				"height": 200,
				"resizable": false,
				"maximizable": false,
				"fileDropEnabled": true,
				"x": 0,
				"y": 0,
				"transparent": true,
				"decorations": false,
				"visible": false
			}
		],
		"security":
		{
			"csp": "asset:"
		},
		"bundle":
		{
			"active": true,
			"targets": "nsis",
			"identifier": "com.EVERMEDIAPROJECT.Harmoonic",
			"publisher": "EVERMEDIA PROJECT",
			"icon": [
				"./icons/icon.ico",
				"./icons/16x16.ico",
				"./icons/24x24.ico"
			],
			"copyright": "Â© 2024 EVERMEDIA PROJECT",
			"category": "Music",
			"appimage":
			{
				"bundleMediaFramework": true
			}
		},
		"updater":
		{
			"active": true,
			"endpoints": [
				"https://github.com/immorrtalz/Harmoonic/releases/tag/{{current_version}}"
			],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY2MzE2NUJBRUFGNDBFRTAKUldUZ0R2VHF1bVV4OWkvNWNOOFp6Z1JJbEx1emhVSzF6K0hSK3pHcENKWUZqR2dCQmo3c2N1SnkK",
			"windows":
			{
				"installMode": "basicUi"
			}
		}
	}
}