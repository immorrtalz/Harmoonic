{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Harmoonic",
	"version": "1.0.1",
	"identifier": "com.EVERMEDIAPROJECT.Harmoonic",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "Harmoonic",
				"label": "main",
				"width": 460,
				"height": 1000,
				"fullscreen": false,
				"x": 0,
				"y": 0,
				"transparent": false,
				"decorations": true,
				"shadow": true,
				"visible": true
			}
		],
		"security": {
			"csp": "asset: http://asset.localhost"
		}
	},
	"bundle": {
		"active": true,
		"android": {
			"minSdkVersion": 26
		},
		"targets": "all",
		"publisher": "EVERMEDIA PROJECT",
		"icon": [
			"icons/icon.ico",
			"icons/icon.png"
		],
		"copyright": "Â© 2025 EVERMEDIA PROJECT",
		"category": "Music",
		"fileAssociations":
		[
			{
				"ext": [ "mp3", "wav", "weba", "webm", "m4a", "ogg", "oga", "caf", "flac", "opus", "mid", "aiff", "wma", "au" ]
			}
		]
	}
}
