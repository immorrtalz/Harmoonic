{
	"build": {
		"devPath": "../src",
		"distDir": "../src",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "Harmoonic"
	},
	"tauri": {
		"cli": {},
		"allowlist": {
			"all": true
		},
		"windows": [
			{
				"label": "main",
				"width": 400,
				"height": 200,
				"resizable": false,
				"maximizable": false,
				"fileDropEnabled": false,
				"x": 0,
				"y": 0,
				"transparent": true,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": false,
			"targets": "all",
			"identifier": "com.EVERMEDIAPROJECT.Harmoonic",
			"publisher": "EVERMEDIAPROJECT",
			"icon": [
				"./icons/32x32.ico",
				"./icons/16x16.ico",
				"./icons/256x256.ico"
			],
			"copyright": "Copyright Â© 2024 EVERMEDIAPROJECT",
			"category": "Music",
			"shortDescription": "Simple audio player with modern design"
		}
	}
}