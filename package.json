{
	"name": "Harmoonic",
	"productName": "Harmoonic",
	"version": "0.2.0",
	"icon": "build/icon.png",
	"description": "Simple audio player with modern design",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder --win",
		"update-all": "npm install --save"
	},
	"author": "EVERMEDIA PROJECT",
	"copyright": "Copyright Â© 2024 ${author}",
	"license": "GPL-3.0",
	"homepage": "https://github.com/immorrtalz/Harmoonic",
	"repository": "github:immorrtalz/Harmoonic",
	"bugs": {
		"url": "https://github.com/immorrtalz/Harmoonic/issues"
	},
	"devDependencies": {
		"electron": "^28.1.4",
		"electron-builder": "^24.9.1"
	},
	"dependencies": {
		"electron-updater": "^6.1.7"
	},
	"build": {
		"appId": "com.EVERMEDIAPROJECT.Harmoonic",
		"fileAssociations": [
			{
				"ext": "mp3"
			},
			{
				"ext": "wav"
			},
			{
				"ext": "weba"
			},
			{
				"ext": "webm"
			},
			{
				"ext": "m4a"
			},
			{
				"ext": "ogg"
			},
			{
				"ext": "oga"
			},
			{
				"ext": "caf"
			},
			{
				"ext": "flac"
			},
			{
				"ext": "opus"
			},
			{
				"ext": "mid"
			},
			{
				"ext": "aiff"
			},
			{
				"ext": "wma"
			},
			{
				"ext": "au"
			}
		]
	},
	"win": {
		"target": "nsis",
		"perMachine": true,
		"deleteAppDataOnUninstall": true,
		"oneClick": false,
		"multiLanguageInstaller": false,
		"installerIcon": "build/icon.png",
		"installerHeaderIcon": "build/icon.png"
	}
}
